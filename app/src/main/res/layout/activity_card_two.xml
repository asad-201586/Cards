<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/_16sdp"
    android:background="@color/back"
    tools:context=".CardTwo">

    <LinearLayout
        android:id="@+id/lll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card1_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/attachment"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Attachment"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card1_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card2_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/camera"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Camera"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card2_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card4_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/casino"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Casino"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card4_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card5_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/location"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Location"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card5_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card3_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/school"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="School"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card3_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card6_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/share"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Share"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card6_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card7_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/setting"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Setting"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card7_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card8_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/storage"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Storage"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card8_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp">

                <LinearLayout
                    android:background="@color/card9_back_2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/shopping"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Shopping"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/card9_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:onClick="clickListener"
        android:textColor="#ffffff"
        android:text="Previous"
        android:textSize="@dimen/_15ssp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_below="@+id/lll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>