<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/_16sdp"
    android:background="@color/back"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp">

                <LinearLayout
                    android:background="@drawable/corner_gradient_01"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/gps"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="GPS"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="(ON)"
                        android:textStyle="normal"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp">

                <LinearLayout
                    android:background="@drawable/corner_gradient_02"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/battery_charging"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Battery"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="(Charging)"
                        android:textStyle="normal"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp">

                <LinearLayout
                    android:background="@drawable/corner_gradient_03"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/wifi"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="WiFi Network"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="(OFF)"
                        android:textStyle="normal"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp">

                <LinearLayout
                    android:background="@drawable/corner_gradient_04"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/alarm"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <TextView
                        android:text="Alarm"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="(Active)"
                        android:textStyle="normal"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>